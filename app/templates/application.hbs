<div class="container">
  {{#if session.currentUser}}
    Welcome, {{session.currentUser.username}}
  {{else}}
    {{#if session.isWorking}}
      Signing you in...
    {{else}}
      {{error}}
        <button {{action 'signInViaGithub'}} class="btn btn-primary pull-right">
          Login with Github
        </button>
    {{/if}}
  {{/if}}
  <div class="row">
    <div class="col-md-12">
      <div class="row text-center">
        <img src="/assets/images/skillinventorylogo.png"></img>
      </div>
      <hr>
    </div>
  </div>

  {{outlet}}

</div>
